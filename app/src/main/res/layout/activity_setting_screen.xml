<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kr.hs.dgsw.mdv.activity.setting.SettingScreenActivity">
    <Button
        android:text="뒤로가기"
        android:textStyle="bold"
        android:background="@android:color/transparent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:background="#80000000"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/lineSpaceSettingButton"
                android:background="@android:color/transparent"
                android:text="줄 간격"
                android:textSize="20dp"
                android:textColor="#000000"
                android:textAlignment="textStart"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/paddingSettingButton"
                android:background="@android:color/transparent"
                android:text="상하좌우 여백"
                android:textSize="20dp"
                android:textColor="#000000"
                android:textAlignment="textStart"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/statusBarSettingButton"
                android:background="@android:color/transparent"
                android:text="상태줄 표시 여부"
                android:textSize="20dp"
                android:textColor="#000000"
                android:textAlignment="textStart"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/pagingSettingButton"
                android:background="@android:color/transparent"
                android:text="화면 넘기는 방법"
                android:textSize="20dp"
                android:textColor="#000000"
                android:textAlignment="textStart"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/screenColorSettingButton"
                android:background="@android:color/transparent"
                android:text="배경색"
                android:textSize="20dp"
                android:textColor="#000000"
                android:textAlignment="textStart"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/screenReplaceSettingButton"
                android:background="@android:color/transparent"
                android:text="배경색"
                android:textSize="20dp"
                android:textColor="#000000"
                android:textAlignment="textStart"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
